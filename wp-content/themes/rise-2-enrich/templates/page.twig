{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">


		<div class="site-left-col col-lg-6">
			<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
				<section class="article-content">
					<h1 class="article-h1">{{post.title}}</h1>
					<div class="article-body">
						{{post.content}}
					</div>
				</section>
			</article>

			{% block footer %}
				<footer id="footer">
					{% include 'footer.twig' %}
				</footer>
				{{ function('wp_footer') }}
			{% endblock %}

		</div>

		<div class="site-right-col col-lg-6">

		</div>



	</div><!-- /content-wrapper -->
{% endblock %}